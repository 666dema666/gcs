name=$0
target=dummy

while [ "$target" != '' ]; do
	target=`ls -l "$name" | grep ' ->' | sed 's/.* -> //'`
	if [ "$target" != '' ]; then
		name="$target"
	fi
done

case "$name" in
	/*)	name="$name"		;;
	*)	name="`pwd`/$name"	;;
esac

GCS_HOME="$(cd "$(dirname "$name")"; pwd)"
GCS_JAR="$GCS_HOME/GURPS Character Sheet.app/Contents/Java/gcs-APP_VERSION.jar"
java -Xmx256M -jar "$GCS_JAR" "$@"
